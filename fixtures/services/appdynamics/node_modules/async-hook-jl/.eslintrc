{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": [2, 2],
    "quotes": [1, "single", "avoid-escape"],
    "curly": 0,
    "strict": [2, "global"],
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": [1, "nofunc"],
    "prefer-spread": 1,
    "prefer-const": 1,
    "no-console": 0,
    "no-var": 1
  }
}
